<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- Configuration settings for convention tests -->
  <RunConfiguration>
    <!-- Path relative to solution directory -->
    <ResultsDirectory>.\TestResults</ResultsDirectory>
    
    <!-- x86 or x64 -->
    <TargetPlatform>x64</TargetPlatform>
    
    <!-- Framework35 | [Framework40] | Framework45 -->
    <TargetFrameworkVersion>net9.0</TargetFrameworkVersion>
    
    <!-- Timeout in milliseconds -->
    <TestSessionTimeout>30000</TestSessionTimeout>
    
    <!-- Number of parallel test workers -->
    <MaxCpuCount>4</MaxCpuCount>
  </RunConfiguration>

  <!-- Test Adapter Settings -->
  <TestAdaptersPaths>
    <Path>%UserProfile%\.nuget\packages</Path>
  </TestAdaptersPaths>

  <!-- Data collection settings -->
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="Code Coverage" uri="datacollector://Microsoft/CodeCoverage/2.0" assemblyQualifiedName="Microsoft.VisualStudio.Coverage.DynamicCoverageDataCollector, Microsoft.VisualStudio.TraceCollector, Version=11.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a">
        <Configuration>
          <CodeCoverage>
            <!-- Include convention tests in coverage -->
            <ModulePaths>
              <Include>
                <ModulePath>.*DockerLearningApi\.Tests\.dll$</ModulePath>
                <ModulePath>.*DockerLearningApi\.dll$</ModulePath>
                <ModulePath>.*DockerLearning\.Domain\.dll$</ModulePath>
              </Include>
            </ModulePaths>
            
            <!-- Exclude generated files from coverage -->
            <Sources>
              <Exclude>
                <Source>.*\\obj\\.*</Source>
                <Source>.*\\bin\\.*</Source>
                <Source>.*AssemblyInfo\.cs$</Source>
                <Source>.*\.Designer\.cs$</Source>
                <Source>.*\.generated\.cs$</Source>
                <Source>.*\.g\.cs$</Source>
              </Exclude>
            </Sources>
            
            <!-- Function coverage settings -->
            <Functions>
              <Exclude>
                <!-- Exclude compiler-generated methods -->
                <Function>.*\.get_.*</Function>
                <Function>.*\.set_.*</Function>
                <Function>.*\.<.*>.*</Function>
              </Exclude>
            </Functions>
          </CodeCoverage>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>

  <!-- Logger settings -->
  <LoggerRunSettings>
    <Loggers>
      <Logger friendlyName="trx" enabled="True" />
      <Logger friendlyName="html" enabled="True" />
    </Loggers>
  </LoggerRunSettings>

  <!-- MSTest configuration -->
  <MSTest>
    <!-- Run tests in parallel -->
    <Parallelize>
      <Workers>4</Workers>
      <Scope>MethodLevel</Scope>
    </Parallelize>
    
    <!-- Timeout for individual tests (in milliseconds) -->
    <TestTimeout>10000</TestTimeout>
    
    <!-- Deploy test items -->
    <DeploymentEnabled>false</DeploymentEnabled>
  </MSTest>
</RunSettings>
